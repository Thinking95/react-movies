{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "allowImportExportEverywhere": true,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
        
    },
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "double"],
        "space-before-function-paren": [0, {"anonymous": "always", "named": "always"}],
        "camelcase": 0,
        "no-return-assign": 0
    }
  }
  