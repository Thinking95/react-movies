{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
		    "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "allowImportExportEverywhere": true,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
      "react": {
        "version": "16.0"
      }
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"semi": [2, "always"],
    "no-tabs": 0,
    "indent": "off",
    "quotes": [2, "single", { "avoidEscape": true }],
        "space-before-function-paren": [0, {"anonymous": "always", "named": "always"}],
        "space-before-blocks" : 2,
        "camelcase": 0,
        "no-return-assign": 0
    }
  }
